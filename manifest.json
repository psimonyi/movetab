{
    "applications": {
        "gecko": {
            "id": "movetab@ns.petersimonyi.ca"
        }
    },

    "author": "Peter Simonyi",

    "background": {
        "scripts": ["main.js"]
    },
    
    "default_locale": "en_CA",

    "description": "Move tabs with the context menu.",

    "icons": {
        "16": "movetab-16.svg",
        "32": "movetab-32.svg",
        "64": "movetab-32.svg",
        "48": "movetab-48.svg",
        "96": "movetab-48.svg"
    },

    "manifest_version": 2,

    "name": "Tab Teleporter",

    "permissions": [
        "<all_urls>",
        "menus",
        "sessions",
        "tabs"
    ],

    "version": "2"
}
